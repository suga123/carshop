<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Carshop</display-name>
  <welcome-file-list>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <resource-env-ref>
    <resource-env-ref-name>carshop</resource-env-ref-name>
    <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
  </resource-env-ref>
  <listener>
  	<listener-class>com.oracle.carshop.control.listener.SessionListener</listener-class>
  </listener>
  <session-config>
  	<session-timeout>20</session-timeout>
  </session-config>
  
  
  
  
  
  <!--  这里是配置过滤器组件的标记  -->
  <filter>
  	<filter-name>CharacterFilter</filter-name>
  	<filter-class>com.oracle.carshop.control.filter.CharacterFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>CharacterFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  <filter>
  	<filter-name>SessionCheckerFilter</filter-name>
  	<filter-class>com.oracle.carshop.control.filter.SessionCheckerFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>SessionCheckerFilter</filter-name>
  	<url-pattern>/UserServlet</url-pattern>
  </filter-mapping>
  
  
  
</web-app>